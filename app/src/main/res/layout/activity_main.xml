<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMain"
        android:layout_width="421dp"
        android:layout_height="75dp"
        android:background="#D58BC34A"
        android:clickable="false"
        android:elevation="4dp"
        android:longClickable="false"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@drawable/ic_banco"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Utilizando SQLITE"
        app:titleMargins="0dp">

    </androidx.appcompat.widget.Toolbar>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nomeUsuarioHome"
                    android:layout_width="116dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="6dp"
                    android:padding="3dp"
                    android:visibility="visible"
                    android:layout_marginTop="80dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtCadastro" />

                <Button
                    android:id="@+id/btnCadastro"
                    android:layout_width="189dp"
                    android:layout_height="74dp"
                    android:layout_marginLeft="92dp"
                    android:layout_marginTop="10dp"
                    android:drawableEnd="@drawable/ic_cadastro"
                    android:text="Cadastrar Clinete"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtCadastro" />

                <Button
                    android:id="@+id/btnListar"
                    android:layout_width="187dp"
                    android:layout_height="74dp"
                    android:layout_marginLeft="92dp"
                    android:layout_marginTop="44dp"
                    android:drawableEnd="@drawable/ic_lista"
                    android:text="Listar Cliente"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnCadastro" />

                <Button
                    android:id="@+id/btnProduto"
                    android:layout_width="187dp"
                    android:layout_height="74dp"
                    android:layout_marginLeft="92dp"
                    android:layout_marginTop="44dp"
                    android:drawableEnd="@drawable/ic_cadastro"
                    android:text="Cadastrar Produtos"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnListar" />

                <Button
                    android:id="@+id/btnListaProduto"
                    android:layout_width="187dp"
                    android:layout_height="74dp"
                    android:layout_marginLeft="92dp"
                    android:layout_marginTop="44dp"
                    android:drawableEnd="@drawable/ic_lista"
                    android:text="Lista Produtos"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnProduto" />

                <Button
                    android:id="@+id/btnListaCompras"
                    android:layout_width="187dp"
                    android:layout_height="74dp"
                    android:layout_marginLeft="92dp"
                    android:layout_marginTop="44dp"
                    android:drawableEnd="@drawable/ic_cliente"
                    android:text="Minhas Compras"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnListaProduto" />

            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>